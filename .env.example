# Application Environment
APP_ENV=dev

# Database Configuration
DATABASE_URL=postgresql://app:app@db:5432/app

# WhatsApp API Configuration
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here
WHATSAPP_APP_SECRET=your_whatsapp_app_secret_here  # For webhook signature verification (optional in dev)
WHATSAPP_DRY_RUN=true  # Set to false in production

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_DEPOSIT_AMOUNT_PENCE=5000

# Fresha Booking URL
FRESHA_BOOKING_URL=https://your-fresha-booking-url.com

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your_openai_api_key_here

# Supabase Storage Configuration (for reference images)
# Get these from: https://supabase.com/dashboard/project/<your-project>/settings/api
# IMPORTANT: Never expose SUPABASE_SERVICE_ROLE_KEY in frontend code, React, mobile apps, etc.
# Only your FastAPI server should have it. If it leaks, rotate it immediately in Supabase.
SUPABASE_URL=https://<your-project-ref>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=sb_secret_XXXXXXXXXXXXXXXX
SUPABASE_STORAGE_BUCKET=reference-images
SUPABASE_SIGNED_URL_TTL_SECONDS=3600

# Database Credentials (for docker-compose)
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app
